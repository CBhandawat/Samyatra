<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/split_bg"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/syp"
        android:layout_width="325dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="209dp"
        android:text="Select Your Preferences"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="122dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonnext3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/syp"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:id="@+id/both"
            android:layout_width="346dp"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:buttonTint="@color/gradStop"
            android:text="Do you want to offer as well as find a ride?"
            android:textColor="@color/gradStart"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="209dp" />

        <RadioButton
            android:id="@+id/findonly"
            android:layout_width="347dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"

            android:buttonTint="@color/gradStop"
            android:text="Do you want to find a ride only?"
            android:textColor="@color/gradStart"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="389dp" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonnext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/mybutton"
        android:text="NEXT"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="492dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp" />
</RelativeLayout>