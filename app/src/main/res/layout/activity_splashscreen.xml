<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/samyatra_image"

    android:id="@+id/lin_lay"
    tools:context=".Splashscreen"
     >

    <ImageView
        android:id="@+id/splash"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:background="@drawable/car1" />

    <TextView
        android:id="@+id/splash_samyatra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:text="SAMYATRA"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/splash_t_t"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/splash_samyatra"
        android:layout_marginTop="221dp"
        android:text="travel together"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/splash_samyatra" />

</RelativeLayout>