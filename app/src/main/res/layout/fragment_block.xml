<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:background="@drawable/crying_emoji" />

    <Button
        android:id="@+id/buttondelete"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="177dp"
        android:background="@drawable/mybutton"
        android:text="YES I WANT TO"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textdelete"
        android:layout_width="346dp"
        android:layout_height="40dp"
        android:layout_above="@+id/buttondelete"
        android:layout_centerHorizontal="true"
        android:text="Do you really want to delete your account?"
        android:textSize="18dp" />

    <Button
        android:id="@+id/buttonnotdelete"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:background="@drawable/mybutton"
        android:text="NO I DON'T WANT TO"
        android:textColor="@color/white" />


</RelativeLayout>